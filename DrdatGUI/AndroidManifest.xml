<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.google.android.drdat.gui">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".DrdatForms" android:label="@string/instructions">
			<intent-filter>
				<action android:name="com.google.android.drdat.gui.INSTRUCTIONS" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".DrdatListTasks" android:label="@string/listtasks">
			<intent-filter>
				<action android:name="com.google.android.drdat.gui.DRDATTASKS" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".PartLogin" android:label="@string/part_login">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PartLogin" android:label="@string/part_login">
            <intent-filter>
                <action android:name="com.google.android.drdat.gui.PARTLOGIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="drdat" />
			</intent-filter>
		</activity>

	    <receiver android:name=".TaskBroadcast">
            <intent-filter>
                <action android:name="com.google.android.drdat.gui.TASK_BROADCAST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
	    </receiver>
        
        <provider android:name=".DrdatDataProvider" 
            android:authorities="com.google.android.drdat.gui.drdatdataprovider" />
        
    </application>
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.VIBRATE" />
    <uses-sdk android:minSdkVersion="7" />
</manifest> 